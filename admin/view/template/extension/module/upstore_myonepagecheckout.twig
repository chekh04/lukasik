							return {
								label: item['name'],
								value: item['country_id']
							}
						}));
					}
				});
			},
			select: function(item) {
				$self.val('');

				$('#'+ id + '-' + item['value']).remove();

				$('#' + id).append('<div class="country-item" id="'+ id + '-' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="'+ name +'[]" value="' + item['value'] + '" /></div>');
			}
		});

		$('#' + id).delegate('.fa-minus-circle', 'click', function() {
			$(this).parent().remove();
		});
	});
};

