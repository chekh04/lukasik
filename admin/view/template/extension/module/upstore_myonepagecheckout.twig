{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="button" data-toggle="tooltip" onclick="apply()" id="btn-apply-setting" title="{{ button_apply }}" class="btn btn-success"><i class="fa fa-floppy-o"></i></button>
				<button type="submit" form="form-myonepagecheckout" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-myonepagecheckout" class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-3 control-label">{{ entry_status }}</label>
						<div class="col-sm-9">
							<div class="btn-group" data-toggle="buttons">
								<label class="btn btn-default {% if config_show_onepagecheckout %}active{% endif %}">
									<input type="radio" name="config_show_onepagecheckout" value="1" autocomplete="off" {% if config_show_onepagecheckout %}checked="checked"{% endif %}>
									{{ text_enabled }}
								</label>
								<label class="btn btn-default {% if not config_show_onepagecheckout %}active{% endif %}">
									<input type="radio" name="config_show_onepagecheckout" value="0" autocomplete="off" {% if not config_show_onepagecheckout %}checked="checked"{% endif %}>
									{{ text_disabled }}
								</label>
							</div>
						</div>
					</div>
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-general" data-toggle="tab">{{ text_tab_general }}</a></li>
						<li><a href="#tab-block-constructor" data-toggle="tab">{{ text_tab_block }}</a></li>
						<li><a href="#tab-details" data-toggle="tab">{{ text_tab_details }}</a></li>
						<li><a href="#tab-delivery" data-toggle="tab">{{ text_tab_delivery }}</a></li>
						<li><a href="#tab-setting-shipping-methods" data-toggle="tab">{{ tab_shipping_methods }}</a></li>
						<li><a href="#tab-payment" data-toggle="tab">{{ text_tab_payment }}</a></li>
						<li><a href="#tab-comment" data-toggle="tab">{{ text_tab_comment }}</a></li>
						<li><a href="#tab-javascript" data-toggle="tab">{{ text_tab_javascript }}</a></li>
						<li><a href="#tab-custom-field" data-toggle="tab">{{ text_tab_custom_field }}</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-general">
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ text_type_tel_mask }}</label>
								<div class="col-sm-9">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default {% if opc_type_tel_mask == 1 %}active{% endif %}">
											<input type="radio" name="opc_type_tel_mask" value="1" autocomplete="off" {% if opc_type_tel_mask == 1 %}checked="checked"{% endif %}>
											{{ text_standart_mask }}
										</label>
										<label class="btn btn-default {% if opc_type_tel_mask == 2 %}active{% endif %}">
											<input type="radio" name="opc_type_tel_mask" value="2" autocomplete="off" {% if opc_type_tel_mask == 2 %}checked="checked"{% endif %}>
											{{ text_multi_mask }}
										</label>
									</div>
								</div>
							</div>
							<div id="standart_mask_setting" class="collapse fade {% if opc_type_tel_mask == '1' %}in{% endif %}">
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_phone_mask }}</label>
									<div class="col-xs-9 col-sm-6">
										<input class="form-control" type="text" name="opc_mask" value="{{ opc_mask is not empty ? opc_mask : '' }}" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_tel_validation }}</label>
									<div class="col-xs-9 col-sm-6">
										<input class="form-control" type="text" name="opc_tel_validation" value="{{ opc_tel_validation is not empty ? opc_tel_validation : '' }}" />
										<div class="form-text">
											<b>{{ text_example }}</b>/^\+\d{2}\((?:050|066|095|099|067|068|096|097|098|063|073|093|091|092|094)\)\s?\d{3}-\d{2}-\d{2}$/
										</div>
									</div>
								</div>
							</div>
							<div id="multi_mask_setting" class="collapse fade {% if opc_type_tel_mask == '2' %}in{% endif %}">
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_info }}</label>
									<div class="col-sm-9">{{ text_info_multi_mask }}</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_geoip_auto_detect }}</label>
									<div class="col-sm-9">
										<div class="btn-group" data-toggle="buttons">
											<label class="btn btn-default {% if opc_geoip_auto_detect_status %}active{% endif %}">
												<input type="radio" name="opc_geoip_auto_detect_status" value="1" autocomplete="off" {% if opc_geoip_auto_detect_status %}checked="checked"{% endif %}>
												{{ text_enabled }}
											</label>
											<label class="btn btn-default {% if not opc_geoip_auto_detect_status %}active{% endif %}">
												<input type="radio" name="opc_geoip_auto_detect_status" value="0" autocomplete="off" {% if not opc_geoip_auto_detect_status %}checked="checked"{% endif %}>
												{{ text_disabled }}
											</label>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_initial_country }}</label>
									<div class="col-xs-9 col-sm-6">
										<input class="form-control" type="text" name="opc_initial_country" value="{{ opc_initial_country is not empty ? opc_initial_country : '' }}" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">
										<span data-toggle="tooltip" title="{{ text_help_countries }}">{{ text_exclude_countries }}</span>
									</label>
									<div class="col-xs-9 col-sm-6">
										<input class="form-control" type="text" name="opc_exclude_countries" value="{{ opc_exclude_countries is not empty ? opc_exclude_countries : '' }}" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">
										<span data-toggle="tooltip" title="{{ text_help_countries }}">{{ text_only_countries }}</span>
									</label>
									<div class="col-xs-9 col-sm-6">
										<input class="form-control" type="text" name="opc_only_countries" value="{{ opc_only_countries is not empty ? opc_only_countries : '' }}" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_tel_validation }}</label>
									<div class="col-xs-9 col-sm-6">
										{% set regex_row = 0 %}
										<div id="tel-validation-group">
											{% if opc_multi_tel_validations is not empty %}
											{% for tel_validation in opc_multi_tel_validations %}
												<div class="input-group tel-validation-item">
													<span class="input-group-addon validation-input-group">
														<input type="text" class="form-control country-code" name="opc_multi_tel_validations[{{ regex_row }}][country_code]" value="{{ tel_validation.country_code }}" placeholder="380" />
													</span>
													<input type="text" class="form-control" name="opc_multi_tel_validations[{{ regex_row }}][regex]" value="{{ tel_validation.regex }}" placeholder="{{ text_regex }}" />
													<span class="input-group-btn">
														<button type="button" class="btn btn-danger remove-tel-validation"><i class="fa fa-trash-o"></i></button>
													</span>
												</div>
											{% set regex_row = regex_row + 1 %}
											{% endfor %}
											{% endif %}
										</div>
										<div class="form-text" style="margin-bottom:15px;">
											<b>{{ text_example }}</b>/^\+380(50|66|95|99|67|68|96|97|98|63|73|93|91|92|94)\d{7}$/
										</div>
										<button type="button" onclick="addTelValidation();" class="btn btn-primary">{{ button_add }}</button>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ text_min_price_order }}</label>
								<div class="col-xs-9 col-sm-4">
									{% if customer_groups is not empty %}
										{% for cgmp in customer_groups %}
											<div class="input-group mb-15">
												<span class="input-group-addon w-20"><b>{{ cgmp.name }}</b></span>
												<input class="form-control" type="text" name="opc_min_price_order[{{ cgmp.customer_group_id }}]" value="{{ opc_min_price_order[cgmp.customer_group_id] ?? '' }}" />
											</div>
										{% endfor %}
									{% endif %}
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ text_agree_default }}</label>
								<div class="col-sm-9">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default {% if opc_agree_default %}active{% endif %}">
											<input type="radio" name="opc_agree_default" value="1" autocomplete="off" {% if opc_agree_default %}checked="checked"{% endif %}>
											{{ text_enabled }}
										</label>
										<label class="btn btn-default {% if not opc_agree_default %}active{% endif %}">
											<input type="radio" name="opc_agree_default" value="0" autocomplete="off" {% if not opc_agree_default %}checked="checked"{% endif %}>
											{{ text_disabled }}
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ text_show_weight }}</label>
								<div class="col-sm-9">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default {% if opc_show_weight  %}active{% endif %}">
											<input type="radio" name="opc_show_weight" value="1" autocomplete="off" {% if opc_show_weight %}checked="checked"{% endif %}>
											{{ text_enabled }}
										</label>
										<label class="btn btn-default {% if not opc_show_weight %}active{% endif %}">
											<input type="radio" name="opc_show_weight" value="0" autocomplete="off" {% if not opc_show_weight %}checked="checked"{% endif %}>
											{{ text_disabled }}
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ text_show_not_call_me }}</label>
								<div class="col-sm-9">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default {% if opc_show_not_call_me  %}active{% endif %}">
											<input type="radio" name="opc_show_not_call_me" value="1" autocomplete="off" {% if opc_show_not_call_me %}checked="checked"{% endif %}>
											{{ text_enabled }}
										</label>
										<label class="btn btn-default {% if not opc_show_not_call_me  %}active{% endif %}">
											<input type="radio" name="opc_show_not_call_me" value="0" autocomplete="off" {% if not opc_show_not_call_me %}checked="checked"{% endif %}>
											{{ text_disabled }}
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ text_show_contact_telegram_viber }}</label>
								<div class="col-sm-9">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default {% if opc_show_contact_telegram_viber %}active{% endif %}">
											<input type="radio" name="opc_show_contact_telegram_viber" value="1" autocomplete="off" {% if opc_show_contact_telegram_viber %}checked="checked"{% endif %}>
											{{ text_enabled }}
										</label>
										<label class="btn btn-default {% if not opc_show_contact_telegram_viber %}active{% endif %}">
											<input type="radio" name="opc_show_contact_telegram_viber" value="0" autocomplete="off" {% if not opc_show_contact_telegram_viber %}checked="checked"{% endif %}>
											{{ text_disabled }}
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ entry_register }}</label>
								<div class="col-sm-9">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default {% if (opc_register_status == 0) %}active{% endif %}">
											<input type="radio" name="opc_register_status" value="0" autocomplete="off" {% if (opc_register_status == 0) %}checked="checked"{% endif %}>
											{{ text_register_default }}
										</label>
										<label class="btn btn-default {% if (opc_register_status == 1) %}active{% endif %}">
											<input type="radio" name="opc_register_status" value="1" autocomplete="off" {% if (opc_register_status == 1) %}checked="checked"{% endif %}>
											{{ text_register_required }}
										</label>
										<label class="btn btn-default {% if (opc_register_status == 2) %}active{% endif %}">
											<input type="radio" name="opc_register_status" value="2" autocomplete="off" {% if (opc_register_status == 2) %}checked="checked"{% endif %}>
											{{ text_register_disabled }}
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label pt-0">{{ text_email_default_on_empty }}</label>
								<div class="col-xs-9 col-sm-6">
									<input class="form-control" type="text" name="opc_email_default_on_empty" value="{{ opc_email_default_on_empty ? opc_email_default_on_empty : '' }}" />
								</div>
							</div>
						</div>
						<div class="tab-pane" id="tab-block-constructor">
							<div id="opc_block_constructor">
								<div id="top_full" class="constructor-block col-sm-12" data-sb="top_full">
									<div class="info-block">{{ text_block_top_full }}</div>
									{% if (opc_sorts_block['top_full'] is defined) %}
										{% for opc_block,opc_value in opc_sorts_block['top_full'] %}
											<div class="block-cart col-sm-12">{{attribute(_context, 'text_block_' ~ opc_block) }}
												{% if opc_block == 'free_text' %}
													<div class="opc-group-radio ml-15">
														<input id="opc_free_text_status_on" class="hidden-radio" type="radio" name="opc_free_text_status" value="1" {% if opc_free_text_status == '1' %}checked="checked"{% endif %}>
														<label class="btn btn-xs btn-link opc-status opc-off" for="opc_free_text_status_on"><i class="fa fa-power-off"></i></label>
														<input id="opc_free_text_status_off" class="hidden-radio" type="radio" name="opc_free_text_status" value="0" {% if opc_free_text_status == '0' %}checked="checked"{% endif %}>
														<label class="btn btn-xs btn-link opc-status opc-on" for="opc_free_text_status_off"><i class="fa fa-power-off"></i></label>
													</div>
													<button type="button" data-toggle="modal" data-target="#opcFreeTextModal" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-xs btn-primary btn-opc-edit-html ml-10"><i class="fa fa-pencil"></i></button>
												{% endif %}
												{% if opc_block == 'country_region' %}
													<div class="opc-group-radio ml-15">
														<input id="opc_country_region_status_on" class="hidden-radio" type="radio" name="opc_country_region_status" value="1" {% if opc_country_region_status == '1' %}checked="checked"{% endif %}>
														<label class="btn btn-xs btn-link opc-status opc-off" for="opc_country_region_status_on"><i class="fa fa-power-off"></i></label>
														<input id="opc_country_region_status_off" class="hidden-radio" type="radio" name="opc_country_region_status" value="0" {% if opc_country_region_status == '0' %}checked="checked"{% endif %}>
