												<div class="block-cart col-sm-12">{{attribute(_context, 'text_block_' ~ opc_block) }}
													{% if opc_block == 'free_text' %}
														<div class="opc-group-radio ml-15">
															<input id="opc_free_text_status_on" class="hidden-radio" type="radio" name="opc_free_text_status" value="1" {% if opc_free_text_status == '1' %}checked="checked"{% endif %}>
															<label class="btn btn-xs btn-link opc-status opc-off" for="opc_free_text_status_on"><i class="fa fa-power-off"></i></label>
															<input id="opc_free_text_status_off" class="hidden-radio" type="radio" name="opc_free_text_status" value="0" {% if opc_free_text_status == '0' %}checked="checked"{% endif %}>
															<label class="btn btn-xs btn-link opc-status opc-on" for="opc_free_text_status_off"><i class="fa fa-power-off"></i></label>
														</div>
														<button type="button" data-toggle="modal" data-target="#opcFreeTextModal" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-xs btn-primary btn-opc-edit-html ml-10"><i class="fa fa-pencil"></i></button>
													{% endif %}
													{% if opc_block == 'country_region' %}
														<div class="opc-group-radio ml-15">
															<input id="opc_country_region_status_on" class="hidden-radio" type="radio" name="opc_country_region_status" value="1" {% if opc_country_region_status == '1' %}checked="checked"{% endif %}>
