	html += '		<div class="input-group">';
	html += '			<span class="input-group-addon input-group-color">';
	html += '				<input type="text" placeholder="#000000" name="banner_pro['+ module_row +'][color_title][{{ language['language_id'] }}]" value="" class="form-control color" />';
