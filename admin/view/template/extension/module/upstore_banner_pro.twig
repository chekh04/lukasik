	html += '		<div class="input-group">';
	html += '			<span class="input-group-addon input-group-color">';
	html += '				<input type="text" placeholder="#000000" name="banner_pro['+ module_row +'][price_color][{{ language['language_id'] }}]" value="" class="form-control color" />';
	html += '			</span>';
	html += '			<input class="form-control" id="input-price-'+ module_row +'-{{ language['language_id'] }}" type="text" name="banner_pro['+ module_row +'][price][{{ language['language_id'] }}]" value="" />';
