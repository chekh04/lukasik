	html += '		<div class="input-group">';
	html += '			<span class="input-group-addon input-group-color">';
	html += '				<input type="text" placeholder="#000000" name="banner_pro['+ module_row +'][color_desc][{{ language['language_id'] }}]" value="" class="form-control color" />';
	html += '			</span>';
	html += '			<textarea rows="2" id="input-description-'+ module_row +'-{{ language['language_id'] }}" type="text" name="banner_pro['+ module_row +'][description][{{ language['language_id'] }}]" class="form-control"></textarea>';
	html += '		</div>';
	html += '	</div>';
	html += '</div>';

	html += '<div class="form-group">';
	html += '	<label class="col-sm-2 control-label" for="input-bgblock-'+ module_row +'-{{ language['language_id'] }}">{{ entry_bg_block }}</label>';
