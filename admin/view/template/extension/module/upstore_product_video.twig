{{ header }}
{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-product-video" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-product-video" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-9">
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-default{% if upstore_product_video_status %} active{% endif %}">
                                    <input type="radio" name="upstore_product_video_status" value="1" {% if upstore_product_video_status %}checked="checked"{% endif %}>
                                    <span class="on-off">{{ text_on }}</span>
                                </label>
                                <label class="btn btn-default{% if not upstore_product_video_status %} active{% endif %}">
                                    <input type="radio" name="upstore_product_video_status" value="0" {% if not upstore_product_video_status %}checked="checked"{% endif %}>
                                    <span class="on-off">{{ text_off }}</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">{{ entry_status_list_module }}</label>
                        <div class="col-sm-9">
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-default{% if upstore_product_video_setting.list_module_status %} active{% endif %}">
                                    <input type="radio" name="upstore_product_video_setting[list_module_status]" value="1" {% if upstore_product_video_setting.list_module_status %}checked="checked"{% endif %}>
                                    <span class="on-off">{{ text_on }}</span>
                                </label>
                                <label class="btn btn-default{% if not upstore_product_video_setting.list_module_status %} active{% endif %}">
                                    <input type="radio" name="upstore_product_video_setting[list_module_status]" value="0" {% if not upstore_product_video_setting.list_module_status %}checked="checked"{% endif %}>
                                    <span class="on-off">{{ text_off }}</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div id="custom-icon-list-products" class="collapse fade {% if upstore_product_video_setting.list_module_status == 1 %} in{% endif %}">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">{{ entry_list_module_video_popup }}</label>
                            <div class="col-sm-9">
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-default{% if upstore_product_video_setting.list_module_popup %} active{% endif %}">
                                        <input type="radio" name="upstore_product_video_setting[list_module_popup]" value="1" {% if upstore_product_video_setting.list_module_popup %}checked="checked"{% endif %}>
                                        <span class="on-off">{{ text_yes }}</span>
                                    </label>
                                    <label class="btn btn-default{% if not upstore_product_video_setting.list_module_popup %} active{% endif %}">
                                        <input type="radio" name="upstore_product_video_setting[list_module_popup]" value="0" {% if not upstore_product_video_setting.list_module_popup %}checked="checked"{% endif %}>
                                        <span class="on-off">{{ text_no }}</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div id="popup_display_mode" class="collapse fade {% if upstore_product_video_setting.list_module_popup == 1 %} in{% endif %}">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">{{ entry_video_popup_display_mode }}</label>
                                <div class="col-sm-9">
                                    <div class="btn-group" data-toggle="buttons">
                                        <label class="btn btn-default{% if upstore_product_video_setting.popup_display_mode == 'only_main' or not upstore_product_video_setting.popup_display_mode %} active{% endif %}">
                                            <input type="radio" name="upstore_product_video_setting[popup_display_mode]" value="only_main" {% if upstore_product_video_setting.popup_display_mode %}checked="checked"{% endif %}>
                                            <span class="on-off">{{ text_main_video }}</span>
                                        </label>
                                        <label class="btn btn-default{% if upstore_product_video_setting.popup_display_mode == 'all_video' %} active{% endif %}">
                                            <input type="radio" name="upstore_product_video_setting[popup_display_mode]" value="all_video" {% if not upstore_product_video_setting.popup_display_mode %}checked="checked"{% endif %}>
                                            <span class="on-off">{{ text_all_video }}</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-list-moduel-icon">{{ entry_list_moduel_icon }}</label>
                            <div class="col-sm-9"><a href="" id="thumb-list-moduel-icon" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_list_moduel_icon }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                                <input type="hidden" name="upstore_product_video_setting[list_moduel_icon]" value="{{ list_moduel_icon }}" id="input-list-moduel-icon" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-3 control-label">{{ entry_image_wh }}</label>
                            <div class="col-sm-9 form-inline">
                                <div class="input-group d-flex">
                                    <span class="input-group-addon w-auto">{{ entry_width }}</span>
                                    <input type="number" name="upstore_product_video_setting[list_moduel_icon_width]" value="{{ upstore_product_video_setting.list_moduel_icon_width ?: '32' }}" type="text" class="form-control w-90">
                                    <span class="input-group-addon w-auto ml-15">{{ entry_height }}</span>
                                    <input type="number" name="upstore_product_video_setting[list_moduel_icon_height]" value="{{ upstore_product_video_setting.list_moduel_icon_height ?: '24' }}" type="text" class="form-control w-90">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .on-off {
        display: inline-block;
        min-width: 40px;
    }
    .w-90 {
        width: 90px  !important;
    }
    .ml-15 {
        margin-left: 15px;
    }
    .w-auto {
        width: auto;
        min-width: 80px;
        line-height: 17px;
    }
</style>
<script>
    $(document).on('change', '[name="upstore_product_video_setting[list_module_status]"]', function() {
        setTimeout(function() {
            console.log();
            if ($('[name="upstore_product_video_setting[list_module_status]"]:checked').val() == '1') {
                $('#custom-icon-list-products').collapse('show');
            } else {
                $('#custom-icon-list-products').collapse('hide');
            }
        }, 50);
    });

    $(document).on('change', '[name="upstore_product_video_setting[list_module_popup]"]', function() {
        setTimeout(function() {
            console.log();
            if ($('[name="upstore_product_video_setting[list_module_popup]"]:checked').val() == '1') {
                $('#popup_display_mode').collapse('show');
            } else {
                $('#popup_display_mode').collapse('hide');
            }
        }, 50);
    });
</script>
{{ footer }}
