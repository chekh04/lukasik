{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right" id="buttons-apply">
				<button type="submit" form="form-megasliderpro" data-toggle="tooltip" data-placement="bottom" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" data-placement="bottom" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if (error_warning) %}
			<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		{% if (error_megasliderpro_image) %}
			<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_megasliderpro_image }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-megasliderpro" class="form-horizontal">
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
						<div class="col-sm-10">
							<input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
							{% if (error_name) %}
								<div class="text-danger">{{ error_name }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-delay">{{ entry_delay }}</label>
						<div class="col-sm-10 form-inline">
							<input type="number" name="delay" value="{{ delay }}" placeholder="{{ entry_delay }}" id="input-delay" class="form-control" />
							{% if (error_delay) %}
								<div class="text-danger">{{ error_delay }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-hover">{{ entry_hover }}</label>
						<div class="col-sm-10">
							<div class="btn-group" data-toggle="buttons">
								<label class="btn btn-default{% if hover %} active{% endif %}">
									<input type="radio" name="hover" value="1" {% if hover %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_on }}</span>
								</label>
								<label class="btn btn-default{% if not hover %} active{% endif %}">
									<input type="radio" name="hover" value="0" {% if not hover %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_off }}</span>
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-nextback">{{ entry_nextback }}</label>
						<div class="col-sm-10">
							<div class="btn-group" data-toggle="buttons">
								<label class="btn btn-default{% if nextback %} active{% endif %}">
									<input type="radio" name="nextback" value="1" {% if nextback %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_on }}</span>
								</label>
								<label class="btn btn-default{% if not nextback %} active{% endif %}">
									<input type="radio" name="nextback" value="0" {% if not nextback %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_off }}</span>
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-contrl">{{ entry_contrl }}</label>
						<div class="col-sm-10">
							<div class="btn-group" data-toggle="buttons">
								<label class="btn btn-default{% if contrl %} active{% endif %}">
									<input type="radio" name="contrl" value="1" {% if contrl %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_on }}</span>
								</label>
								<label class="btn btn-default{% if not contrl %} active{% endif %}">
									<input type="radio" name="contrl" value="0" {% if not contrl %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_off }}</span>
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<div class="btn-group" data-toggle="buttons">
								<label class="btn btn-default{% if status %} active{% endif %}">
									<input type="radio" name="status" value="1" {% if status %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_on }}</span>
								</label>
								<label class="btn btn-default{% if not status %} active{% endif %}">
									<input type="radio" name="status" value="0" {% if not status %}checked="checked"{% endif %}>
									<span class="on-off">{{ text_off }}</span>
								</label>
							</div>
						</div>
					</div>
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-slider" data-toggle="tab">{{ tab_sliders }}</a></li>
						<li><a href="#tab-featured-products" data-toggle="tab">{{ tab_products }}</a></li>
						<li><a href="#tab-small-slider" data-toggle="tab">{{ tab_small_slider }}</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-slider">
							<div class="row">
								<div class="col-sm-2">
									<ul class="nav nav-pills nav-stacked" id="module">
									{% set module_row = 1 %}
									{% for megaslider_image in megaslider_images %}
										<li><a href="#tab-module{{ module_row }}" data-toggle="tab">{{ tab_slider ~ ' ' ~ module_row }} <i class="fa fa-minus-square-o pull-right" onclick="$('a[href=\'#tab-module{{ module_row }}\']').parent().remove(); $('#tab-module{{ module_row }}').remove(); $('#module a:first').tab('show');"></i></a></li>
										{% set module_row = module_row + 1 %}
										{% endfor %}
										<li id="module-add"><a onclick="addModule();"><i class="fa fa-plus-square-o" aria-hidden="true"></i> {{ button_add_banner }}</a></li>
									</ul>
								</div>
								<div class="col-sm-10">
									<div class="tab-content">
										{% set module_row = 1 %}
										{% for megaslider_image in megaslider_images %}
										<div class="tab-pane" id="tab-module{{ module_row }}">
											<ul class="nav nav-tabs" id="language{{ module_row }}">
												{% for language in languages %}
													<li><a href="#tab-module{{ module_row }}-language{{ language['language_id'] }}" data-toggle="tab"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> {{ language['name'] }}</a></li>
												{% endfor %}
											</ul>
											<div class="tab-content">
												{% for language in languages %}
													<div class="tab-pane" id="tab-module{{ module_row }}-language{{ language.language_id }}">
														<div class="form-group">
															<label class="col-sm-2 control-label">{{ entry_title }}</label>
															<div class="col-sm-10">
																<div class="input-group">
																	<span class="input-group-addon input-group-color">
																		<input type="text" placeholder="#000000" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][color_title]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].color_title | default('') }}" class="form-control color" />
																	</span>
																	<textarea rows="2" type="text" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][title]" class="form-control">{{ megaslider_image['megaslider_image_description'][language.language_id].title | default('') }}</textarea>
																</div>
															</div>
														</div>
														<div class="form-group">
															<label class="col-sm-2 control-label">{{ entry_subtitle }}</label>
															<div class="col-sm-10">
																<div class="input-group">
																	<span class="input-group-addon input-group-color">
																		<input type="text" placeholder="#000000" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][color_sub_title]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].color_sub_title | default('') }}" class="form-control color" />
																	</span>
																	<textarea rows="2" type="text" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][sub_title]" class="form-control">{{ megaslider_image['megaslider_image_description'][language.language_id].sub_title | default('') }}</textarea>
																</div>
															</div>
														</div>
														<div class="form-group">
															<label class="col-sm-2 control-label">{{ entry_text_price_from }}</label>
															<div class="col-sm-10">
																<div class="input-group">
																	<span class="input-group-addon input-group-color">
																		<input type="text" placeholder="#000000" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][color_price_from]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].color_price_from | default('') }}" class="form-control color" />
																	</span>
																	<input class="form-control" type="text" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][text_price_from]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].text_price_from | default('') }}" />
																</div>
															</div>
														</div>
														<div class="form-group">
															<label class="col-sm-2 control-label">{{ entry_price }}</label>
															<div class="col-sm-10">
																<div class="input-group">
																	<span class="input-group-addon input-group-color">
																		<input type="text" placeholder="#000000" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][price_color]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].price_color | default('') }}" class="form-control color" />
																	</span>
																	<input class="form-control" type="text" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][price]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].price | default('') }}" />
																</div>
															</div>
														</div>
														<div class="form-group">
															<label class="col-sm-2 control-label" for="input-link{{ module_row }}-language{{ language.language_id }}">{{ entry_link }}</label>
															<div class="col-sm-10">
																<input type="text" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][link]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].link | default('') }}" placeholder="{{ entry_link }}" class="form-control" />
															</div>
														</div>
														<div class="form-group">
															<label class="col-sm-2 control-label" for="input-image{{ module_row }}-language{{ language.language_id }}">{{ entry_image }}</label>
															<div class="col-sm-10">
																<a href="" id="thumb-image-bg-{{ module_row }}-language{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
																	<img src="{{ megaslider_image['megaslider_image_description'][language.language_id].thumb | default(placeholder) }}" alt="" title="" data-placeholder="{{ placeholder }}" />
																</a>
																<input type="hidden" name="megaslider_image[{{ module_row }}][megaslider_image_description][{{ language.language_id }}][image]" value="{{ megaslider_image['megaslider_image_description'][language.language_id].image }}" id="input-image-bg-{{ module_row }}-language{{ language.language_id }}" />
															</div>
														</div>
													</div>
												{% endfor %}
												<div class="form-group">
													<label class="col-sm-2 control-label" for="input-sort-order{{ module_row }}-language{{ language['language_id'] }}">{{ entry_sort_order }}</label>
													<div class="col-sm-10">
														<input type="text" name="megaslider_image[{{ module_row }}][sort_order]" value="{{ megaslider_image['sort_order'] is defined ? megaslider_image['sort_order'] : '0' }}" placeholder="{{ entry_link }}" class="form-control" />
													</div>
												</div>
											</div>
										</div>
										<script>
										$('#language{{ module_row }} li:first-child a').tab('show');
										</script>
										{% set module_row = module_row + 1 %}
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
						<div class="tab-pane" id="tab-featured-products">
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_position_product }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										{% if position_product == 'right' %}
											<label class="btn btn-default">
												<input autocomplete="off" type="radio" name="position_product" value="left" /> {{ text_position_left }}
											</label>
											<label class="btn btn-default active">
												<input autocomplete="off" type="radio" name="position_product" value="right" checked="checked" /> {{ text_position_right }}
											</label>
										{% else %}
											<label class="btn btn-default active">
												<input autocomplete="off" type="radio" name="position_product" value="left" checked="checked" /> {{ text_position_left }}
											</label>
											<label class="btn btn-default">
												<input autocomplete="off" type="radio" name="position_product" value="right" /> {{ text_position_right }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-name">{{ ntry_title }}</label>
								<div class="col-sm-10">
									{% for language in languages %}
										<div class="input-group"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></span>
											<textarea name="fp_name[{{ language.language_id }}]" rows="1" class="form-control">{{ fp_name[language['language_id']] is defined ? fp_name[language['language_id']] : '' }}</textarea>
										</div>
									{% endfor %}
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-product">{{ entry_product }}</label>
								<div class="col-sm-10">
									<input type="text" name="product_name" value="" placeholder="{{ entry_product }}" id="input-product" class="form-control" />
									<div id="slider-featured-product" class="well well-sm" style="height: 150px; overflow: auto;">
										{% for product in products %}
											<div id="slider-featured-product{{ product.product_id }}">
												<i class="fa fa-minus-circle"></i> {{ product.name }}
												<input type="hidden" name="product[]" value="{{ product.product_id }}" />
											</div>
										{% endfor %}
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-fp-width">{{ entry_width }}</label>
								<div class="col-sm-10">
									<input type="text" name="fp_width" value="{{ fp_width }}" placeholder="{{ entry_width }}" id="input-fp-width" class="form-control" />
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-fp-height">{{ entry_height }}</label>
								<div class="col-sm-10">
									<input type="text" name="fp_height" value="{{ fp_height }}" placeholder="{{ entry_height }}" id="input-fp-height" class="form-control" />
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-fp-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="fp_status" id="input-fp-status" class="form-control">
										{% if (fp_status) %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
										{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<script>
								$('input[name=\'product_name\']').autocomplete({
									source: function(request, response) {
										$.ajax({
											url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
											dataType: 'json',
											success: function(json) {
												response($.map(json, function(item) {
													return {
														label: item['name'],
														value: item['product_id']
													}
												}));
											}
										});
									},
									select: function(item) {
										$('input[name=\'product_name\']').val('');

										$('#slider-featured-product' + item['value']).remove();

										$('#slider-featured-product').append('<div id="slider-featured-product' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="product[]" value="' + item['value'] + '" /></div>');
									}
								});

								$('#slider-featured-product').delegate('.fa-minus-circle', 'click', function() {
									$(this).parent().remove();
								});
							</script>
						</div>

						<div class="tab-pane" id="tab-small-slider">
							<div class="info-header">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="butt" stroke-linejoin="bevel"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M20.4 14.5L16 10 4 20"/></svg>
								{{ text_main_setting }}
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{% if small_slider_status %} active{% endif %}">
											<input type="radio" name="small_slider_status" value="1" {% if small_slider_status %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_on }}</span>
										</label>
										<label class="btn btn-default{% if not small_slider_status %} active{% endif %}">
											<input type="radio" name="small_slider_status" value="0" {% if not small_slider_status %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_off }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group required">
								<label class="col-sm-2 control-label">{{ entry_image_wh }}</label>
								<div class="col-sm-10 form-inline">
									<div class="input-group d-flex">
										<span class="input-group-addon w-auto">{{ entry_width }}</span>
										<input name="small_slider_width" value="{{ small_slider_width is defined ? small_slider_width : '' }}" type="text" class="form-control w-70">
										<span class="input-group-addon w-auto ml-15">{{ entry_height }}</span>
										<input name="small_slider_height" value="{{ small_slider_height is defined ? small_slider_height : '' }}" type="text" class="form-control w-70">
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_status_autoplay }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{% if small_slider_status_autoplay %} active{% endif %}">
											<input type="radio" name="small_slider_status_autoplay" value="1" {% if small_slider_status_autoplay %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_on }}</span>
										</label>
										<label class="btn btn-default{% if not small_slider_status_autoplay %} active{% endif %}">
											<input type="radio" name="small_slider_status_autoplay" value="0" {% if not small_slider_status_autoplay %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_off }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_autoplay_delay }}</label>
								<div class="col-sm-10 form-inline">
									<input type="number" class="form-control" name="small_slider_autoplay_delay" value="{{ small_slider_autoplay_delay }}">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_controls }}</label>
								<div class="col-sm-10">
									<div data-toggle="buttons">
										<label class="btn btn-default{% if small_slider_pagination %} active{% endif %}">
											<input autocomplete="off" type="checkbox" name="small_slider_pagination" value="1" {% if small_slider_pagination %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_pagination }}</span>
										</label>
										<label class="btn btn-default{% if small_slider_navigation %} active{% endif %}">
											<input autocomplete="off" type="checkbox" name="small_slider_navigation" value="1" {% if small_slider_navigation %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_navigation }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_position }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{% if small_slider_position == 'left' %} active{% endif %}">
											<input type="radio" name="small_slider_position" value="left" {% if small_slider_position == 'left' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_left }}</span>
										</label>
										<label class="btn btn-default{% if small_slider_position == 'right' %} active{% endif %}">
											<input type="radio" name="small_slider_position" value="right" {% if small_slider_position == 'right' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_right }}</span>
										</label>
									</div>
								</div>
							</div>
