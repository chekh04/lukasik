{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-productany" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if (error_warning) %}
			<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-productany" class="form-horizontal">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
						<li><a href="#tab-promo-slider" data-toggle="tab">{{ tab_promo_slider }}</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-general">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
								<div class="col-sm-5">
									<input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
									{% if (error_name) %}
										<div class="text-danger">{{ error_name }}</div>
									{% endif %}
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ text_productany_title }}</label>
								<div class="col-sm-5">
									{% for language in languages %}
										<div class="input-group"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></span>
											<textarea rows="2" name="config_productany_title[{{ language['language_id'] }}][config_productany_title]" placeholder="" class="form-control">{{ config_productany_title[language['language_id']] is defined ? config_productany_title[language['language_id']]['config_productany_title'] : '' }}</textarea>
										</div>
									{% endfor %}
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-color-text">{{ entry_title_color_text }}</label>
								<div class="col-sm-10">
									<input type="text" name="config_title_color_text_productany" value="{{ config_title_color_text_productany }}" placeholder="{{ config_title_color_text_productany }}" id="input-color-text" class="form-control color" />
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-product">{{ entry_product }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{% if type_module == 'featured' %} active{% endif %}">
											<input type="radio" name="type_module" value="featured" {% if type_module == 'featured' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_type_featured }}</span>
										</label>
										<label class="btn btn-default{% if type_module == 'special' %} active{% endif %}">
											<input type="radio" name="type_module" value="special" {% if type_module == 'special' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_type_special }}</span>
										</label>
										<label class="btn btn-default{% if type_module == 'latest' %} active{% endif %}">
											<input type="radio" name="type_module" value="latest" {% if type_module == 'latest' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_type_latest }}</span>
										</label>
										<label class="btn btn-default{% if type_module == 'bestseller' %} active{% endif %}">
											<input type="radio" name="type_module" value="bestseller" {% if type_module == 'bestseller' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_type_bestseller }}</span>
										</label>
										<label class="btn btn-default{% if type_module == 'popular' %} active{% endif %}">
											<input type="radio" name="type_module" value="popular" {% if type_module == 'popular' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_type_popular }}</span>
										</label>
										<label class="btn btn-default{% if type_module == 'viewed' %} active{% endif %}">
											<input type="radio" name="type_module" value="viewed" {% if type_module == 'viewed' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_type_viewed }}</span>
										</label>
										<label class="btn btn-default{% if type_module == 'category' %} active{% endif %}">
											<input type="radio" name="type_module" value="category" {% if type_module == 'category' %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_type_category }}</span>
										</label>
									</div>
								</div>
							</div>
							<div id="productany-products" class="collapse fade {% if type_module == 'featured' %}in{% endif %}">
								<div class="form-group pt-0">
									<label class="col-sm-2 control-label"></label>
									<div class="col-sm-10">
										<input type="text" name="product" value="" placeholder="{{ entry_product }}" id="input-product" class="form-control" />
										<div id="productany-product" class="well well-sm" style="height: 150px; overflow: auto;">
											{% for product in products %}
												<div id="productany-product{{ product.product_id }}">
													<i class="fa fa-hand-o-up" aria-hidden="true"></i>
													<i class="fa fa-hand-o-down" aria-hidden="true"></i>
													<i class="fa fa-minus-circle"></i>
													{{ product.name }}
													<input type="hidden" name="product[]" value="{{ product.product_id }}" />
												</div>
											{% endfor %}
										</div>
									</div>
								</div>
							</div>
							<div id="categories" class="collapse fade {% if type_module == 'category' %}in{% endif %}">
								<div class="form-group pt-0">
									<label class="col-sm-2 control-label">{{ entry_category }}</label>
									<div class="col-sm-10">
										<select id="input_category_id" name="category_id" class="form-control">
											<option value="0" selected="selected">{{ text_none }}</option>
											{% for category in categories %}
												{% if category.category_id == category_id %}
													<option value="{{ category.category_id }}" selected="selected">{{ category.name }}</option>
												{% else %}
													<option value="{{ category.category_id }}">{{ category.name }}</option>
												{% endif %}
											{% endfor %}
										</select>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-2 control-label">{{ entry_filter_sub_category }}</label>
									<div class="col-sm-10">
										<div class="btn-group" data-toggle="buttons">
											<label class="btn btn-default{% if filter_sub_category %} active{% endif %}">
												<input type="radio" name="filter_sub_category" value="1" {% if filter_sub_category %}checked="checked"{% endif %}>
												<span class="on-off">{{ text_on }}</span>
											</label>
											<label class="btn btn-default{% if not filter_sub_category %} active{% endif %}">
												<input type="radio" name="filter_sub_category" value="0" {% if not filter_sub_category %}checked="checked"{% endif %}>
												<span class="on-off">{{ text_off }}</span>
											</label>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-2 control-label">{{ entry_sorts }}</label>
									<div class="col-sm-5">
										<select name="sort" class="form-control">
											{% for result_sort in sorts %}
												<option value="{{ result_sort.value }}" {% if result_sort.value == sort %}selected="selected"{% endif %}>{{ result_sort.text }}</option>
											{% endfor %}
										</select>
									</div>
									<div class="col-sm-5">
										<select name="order" class="form-control">
											<option value="ASC" {% if order == 'ASC' %}selected="selected"{% endif %}>{{ text_order_asc }}</option>
											<option value="DESC" {% if order == 'DESC' %}selected="selected"{% endif %}>{{ text_order_desc }}</option>
										</select>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_hide_out_of_stock_products }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{% if hide_out_of_stock_products %} active{% endif %}">
											<input type="radio" name="hide_out_of_stock_products" value="1" {% if hide_out_of_stock_products %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_on }}</span>
										</label>
										<label class="btn btn-default{% if not hide_out_of_stock_products %} active{% endif %}">
											<input type="radio" name="hide_out_of_stock_products" value="0" {% if not hide_out_of_stock_products %}checked="checked"{% endif %}>
											<span class="on-off">{{ text_off }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-limit">{{ entry_limit }}</label>
								<div class="col-sm-10 form-inline">
									<input type="number" name="limit" value="{{ limit }}" placeholder="{{ entry_limit }}" id="input-limit" class="form-control" />
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-width">{{ entry_width }}</label>
								<div class="col-sm-10 form-inline">
									<input type="number" name="width" value="{{ width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" />
									{% if error_width %}
										<div class="text-danger">{{ error_width }}</div>
									{% endif %}
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-height">{{ entry_height }}</label>
								<div class="col-sm-10 form-inline">
									<input type="number" name="height" value="{{ height }}" placeholder="{{ entry_height }}" id="input-height" class="form-control" />
									{% if error_height %}
										<div class="text-danger">{{ error_height }}</div>
									{% endif %}
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-statu-stimer-special">{{ entry_timer }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{{ status_timer_special ? ' active' : '' }}">
											<input type="radio" name="status_timer_special" value="1" {{ status_timer_special ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_on }}</span>
										</label>
										<label class="btn btn-default{{ not status_timer_special ? ' active' : '' }}">
											<input type="radio" name="status_timer_special" value="0" {{ not status_timer_special ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_off }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{{ status ? ' active' : '' }}">
											<input type="radio" name="status" value="1" {{ status ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_on }}</span>
										</label>
										<label class="btn btn-default{{ not status ? ' active' : '' }}">
											<input type="radio" name="status" value="0" {{ not status ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_off }}</span>
										</label>
									</div>
								</div>
							</div>
						</div>
						<div class="tab-pane" id="tab-promo-slider">
							<div class="info-header">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="butt" stroke-linejoin="bevel"><line x1="4" y1="21" x2="4" y2="14"></line><line x1="4" y1="10" x2="4" y2="3"></line><line x1="12" y1="21" x2="12" y2="12"></line><line x1="12" y1="8" x2="12" y2="3"></line><line x1="20" y1="21" x2="20" y2="16"></line><line x1="20" y1="12" x2="20" y2="3"></line><line x1="1" y1="14" x2="7" y2="14"></line><line x1="9" y1="8" x2="15" y2="8"></line><line x1="17" y1="16" x2="23" y2="16"></line></svg>
								{{ text_main_setting }}
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{{ promo_slider_status ? ' active' : '' }}">
											<input type="radio" name="promo_slider_status" value="1" {{ promo_slider_status ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_on }}</span>
										</label>
										<label class="btn btn-default{{ not promo_slider_status ? ' active' : '' }}">
											<input type="radio" name="promo_slider_status" value="0" {{ not promo_slider_status ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_off }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_status_autoplay }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{{ promo_slider_status_autoplay ? ' active' : '' }}">
											<input type="radio" name="promo_slider_status_autoplay" value="1" {{ promo_slider_status_autoplay ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_on }}</span>
										</label>
										<label class="btn btn-default{{ not promo_slider_status_autoplay ? ' active' : '' }}">
											<input type="radio" name="promo_slider_status_autoplay" value="0" {{ not promo_slider_status_autoplay ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_off }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_autoplay_delay }}</label>
								<div class="col-sm-10 form-inline">
									<input type="number" class="form-control" name="promo_slider_autoplay_delay" value="{{ promo_slider_autoplay_delay }}">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_controls }}</label>
								<div class="col-sm-10">
									<div data-toggle="buttons">
										<label class="btn btn-default{{ promo_slider_controls['pagination'] ? ' active' : '' }}">
											<input autocomplete="off" type="checkbox" name="promo_slider_controls[pagination]" value="1" {{ promo_slider_controls['pagination'] ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_pagination }}</span>
										</label>
										<label class="btn btn-default{{ promo_slider_controls['navigation'] ? ' active' : '' }}">
											<input autocomplete="off" type="checkbox" name="promo_slider_controls[navigation]" value="1" {{ promo_slider_controls['navigation'] ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_navigation }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-promo-slider-position">{{ entry_position }}</label>
								<div class="col-sm-10">
									<div class="btn-group" data-toggle="buttons">
										<label class="btn btn-default{{ promo_slider_position == 'left' ? ' active' : '' }}">
											<input type="radio" name="promo_slider_position" value="left" {{ promo_slider_position == 'left' ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_left }}</span>
										</label>
										<label class="btn btn-default{{ promo_slider_position == 'right' ? ' active' : '' }}">
											<input type="radio" name="promo_slider_position" value="right" {{ promo_slider_position == 'right' ? 'checked="checked"' : '' }}>
											<span class="on-off">{{ text_right }}</span>
										</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-promo-slider-width">{{ entry_width }}</label>
								<div class="col-sm-10 form-inline">
									<input type="number" name="promo_slider_width" value="{{ promo_slider_width }}" placeholder="{{ entry_width }}" id="input-promo-slider-width" class="form-control" />
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-promo-slider-height">{{ entry_height }}</label>
								<div class="col-sm-10 form-inline">
									<input type="number" name="promo_slider_height" value="{{ promo_slider_height }}" placeholder="{{ entry_height }}" id="input-promo-slider-height" class="form-control" />
								</div>
							</div>
							<div class="info-header">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="butt" stroke-linejoin="bevel"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M20.4 14.5L16 10 4 20"/></svg>
								{{ text_sliders }}
							</div>
							<div id="promo-slider-items" class="row">
								<div class="col-sm-2">
									<ul class="nav nav-pills nav-stacked">
									{% set item_row = 0 %}
									{% for item in promo_slider_items %}
										<li>
											<a href="#tab-promo-item-{{ item_row }}" data-toggle="tab">
												{{ text_promo_item }} {{ item_row + 1 }}
												<i class="fa fa-minus-square-o pull-right" onclick="$('a[href=\'#tab-promo-item-{{ item_row }}\']').parent().remove(); $('#tab-promo-item-{{ item_row }}').remove(); activeFistTab();"></i>
											</a>
										</li>
										{% set item_row = item_row + 1 %}
										{% endfor %}
										<li id="add-promo-item">
											<a href="javascript:void(0)" onclick="addPromoItem();">
												<i class="fa fa-plus-square-o" aria-hidden="true"></i> {{ button_add }}
											</a>
										</li>
									</ul>
								</div>

								<div class="col-sm-10">
									<div class="tab-content">
										{% set item_row = 0 %}
										{% for item in promo_slider_items %}
										<div class="tab-pane" id="tab-promo-item-{{ item_row }}">
											<ul class="nav nav-tabs" id="language{{ item_row }}">
												{% for language in languages %}
													<li>
														<a href="#tab-promo-item-{{ item_row }}-language-{{ language.language_id }}" data-toggle="tab">
															<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}
														</a>
													</li>
												{% endfor %}
											</ul>
											<div class="tab-content">
												{% for language in languages %}
													<div class="tab-pane" id="tab-promo-item-{{ item_row }}-language-{{ language.language_id }}">
														<div class="form-group">
															<label class="col-sm-2 control-label" for="input-title-xs-{{ item_row }}-{{ language.language_id }}">{{ entry_title }}</label>
															<div class="col-sm-10">
																<div class="input-group">
																	<span class="input-group-addon input-group-color">
																		<input type="text" placeholder="#000000" name="promo_slider_items[{{ item_row }}][color_title_xs][{{ language.language_id }}]" value="{{ item.color_title_xs[language.language_id] is defined ? item.color_title_xs[language.language_id] : '' }}" class="form-control color" />
																	</span>
																	<textarea rows="2" id="input-title-xs-{{ item_row }}-{{ language.language_id }}" name="promo_slider_items[{{ item_row }}][title_xs][{{ language.language_id }}]" class="form-control">{{ item.title_xs[language.language_id] is defined ? item.title_xs[language.language_id] : '' }}</textarea>
																</div>
															</div>
														</div>
														<div class="form-group">
															<label class="col-sm-2 control-label" for="input-title-lg-{{ item_row }}-{{ language.language_id }}">{{ entry_title }}</label>
															<div class="col-sm-10">
																<div class="input-group">
																	<span class="input-group-addon input-group-color">
																		<input type="text" placeholder="#000000" name="promo_slider_items[{{ item_row }}][color_title_lg][{{ language.language_id }}]" value="{{ item.color_title_lg[language.language_id] is defined ? item.color_title_lg[language.language_id] : '' }}" class="form-control color" />
																	</span>
																	<textarea rows="2" id="input-title-lg-{{ item_row }}-{{ language.language_id }}" name="promo_slider_items[{{ item_row }}][title_lg][{{ language.language_id }}]" class="form-control">{{ item.title_lg[language.language_id] is defined ? item.title_lg[language.language_id] : '' }}</textarea>
																</div>
															</div>
														</div>
														<div class="form-group">
															<label class="col-sm-2 control-label">{{ entry_image_display_mode }}</label>
															<div class="col-sm-10">
																<div class="btn-group" data-toggle="buttons">
																	<label class="btn btn-default{{ item.image_display_mode[language.language_id] == 'cover' ? ' active' : '' }}">
																		<input type="radio" name="promo_slider_items[{{ item_row }}][image_display_mode][{{ language.language_id }}]" value="cover" {{ item.image_display_mode[language.language_id] == 'cover' ? 'checked="checked"' : '' }}>
																		<span class="on-off">cover</span>
																	</label>
