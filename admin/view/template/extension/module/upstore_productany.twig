});
$(document).on('click', '.fa-hand-o-up', function () {
	$(this).parent().prev().before($(this).parent().prop('outerHTML'))
	$(this).parent().remove();
	changeIcon();
});
$(document).on('click', '.fa-hand-o-down', function () {
	$(this).parent().next().after($(this).parent().prop('outerHTML'))
