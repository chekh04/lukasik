{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-product-size-chart" formaction="{{ action }}" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger">
				<i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form method="post" enctype="multipart/form-data" id="form-product-size-chart" class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status-product-size-chart">{{ entry_status }}</label>
						<div class="col-sm-10">
							<div class="toggle-switch">
								<label>
									<input type="hidden" name="upstore_product_size_chart_status" value="0" />
									<input type="checkbox" name="upstore_product_size_chart_status" value="1" {{ upstore_product_size_chart_status is defined and upstore_product_size_chart_status == 1 ? 'checked="checked"' }} />
									<span></span>
								</label>
							</div>
						</div>
					</div>
					<div id="size-chart-setting" class="collapse fade{{ upstore_product_size_chart_status ? ' in' }}">
						<div class="form-group">
							<label class="col-sm-2 control-label">{{ entry_button_text }}</label>
							<div class="col-sm-5">
								{% for language in languages %}
									<div class="input-group">
										<span class="input-group-addon">
											<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" />
										</span>
										<input name="upstore_product_size_chart_setting[button_text][{{ language.language_id }}]" placeholder="" value="{{ upstore_product_size_chart_setting.button_text[language.language_id] is defined ? upstore_product_size_chart_setting.button_text[language.language_id] : '' }}" class="form-control" />
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script>
$(document).on('change', '[name=upstore_product_size_chart_status]', function() {
	if ($(this).prop('checked')) {
		$('#size-chart-setting').collapse('show');
	} else {
		$('#size-chart-setting').collapse('hide');
	}
});
</script>
{{ footer }}
