{% set title = heading_title ?? 'Тимчасово недоступно' %}
<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="robots" content="noindex,nofollow">
  <title>{{ title }}</title>
  <style>
    html,body{height:100%;margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Arial}
    .wrap{min-height:100%;display:flex;align-items:center;justify-content:center;background:#f6f7f9}
    .card{max-width:720px;padding:48px 32px;background:#fff;border-radius:16px;
          box-shadow:0 6px 24px rgba(0,0,0,.08);text-align:center}
    h1{font-size:28px;margin:0 0 20px}
    p{font-size:18px;margin:0 0 28px;color:#444}
    .btn{
      display:inline-flex;align-items:center;gap:10px;
      padding:16px 24px;border-radius:12px;text-decoration:none;
      background:#ff7a00;color:#fff;font-weight:700;font-size:18px
    }
    .btn:hover{filter:brightness(.95)}
    .note{margin-top:22px;color:#666}
    .dot{width:16px;height:16px;border-radius:50%;display:inline-block;background:#2da5ff}
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card">
      <h1>Перейдіть на наш сайт</h1>
      <a class="btn" href="https://www.lukasik.com.ua">
        <span class="dot"></span> www.lukasik.com.ua
      </a>
      <p class="note">Дякуємо за розуміння!</p>
    </div>
  </div>
</body>
</html>
