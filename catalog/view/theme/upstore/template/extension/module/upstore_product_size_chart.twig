<div id="popup-size-chart" class="modal-dialog chm-modal modal-dialog-centered">
	<div class="modal-content">
		<div class="modal-header">
			<div class="modal-title">{{ heading_title }}</div>
			<button type="button" class="close-modal" data-dismiss="modal"><i class="up-icon-close" aria-hidden="true"></i></button>
		</div>
		<div class="modal-body">
			{% if contents is not empty %}
				{% for content in contents %}
					{% if content.title is not empty %}
						<div class="table-size-chart-name">{{ content.title }}</div>
					{% endif %}
					{% if content.type == 'html' %}
						{{ content.content|raw }}
					{% elseif content.type == 'table' %}
						<div class="table-responsive table-size-chart">
							<table class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										{% for header in content.header %}
											<td>{{ header }}</td>
										{% endfor %}
									</tr>
								</thead>
								<tbody>
									{% set columns = content.header|length %}
									{% set cells = content.cell %}
									{% set rows = content.rows %}
									{% set i = 0 %}
										{% for r in 0..(rows - 1) %}
											<tr>
												{% for c in 0..(columns - 1) %}
													<td>
														{{ cells[i] ?? '' }}
														{% set i = i + 1 %}
													</td>
												{% endfor %}
											</tr>
										{% endfor %}
								</tbody>
							</table>
						</div>
					{% endif %}
				{% endfor %}
			{% endif %}
		</div>
	</div>
</div>